[
  {
    "name": "__root__",
    "rules": [
      ["$.packages[*]", "~@package_transformer", "T.packages"]
    ]
  },
  {
    "name": "package_transformer",
    "rules": [
      ["$.id", "T.package_no"],
      ["$.recipient.surname, $.recipient.forename", "string.template('{1} {0}')", "T.recipient"],
      ["$.recipient.phone", "T.phone"],
      ["$.address.country, $.address.state, $.address.city, $.address.street, $.address.building", "string.template('{0}, {1}, {2}, {3} Street, Building {4}')", "T.address"]
    ]
  }
]